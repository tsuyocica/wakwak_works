<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, "ユーザー名" %><br />
    <%= f.text_field :username, required: true, placeholder: "ユーザー名を入力" %>
  </div>

  <div class="field">
    <%= f.label :full_name, "本名" %><br />
    <%= f.text_field :full_name, required: true, placeholder: "例: 山田 太郎" %>
  </div>

  <div class="field">
    <%= f.label :furigana, "ふりがな" %><br />
    <%= f.text_field :furigana, required: true, placeholder: "例: やまだ たろう" %>
  </div>

  <div class="field">
    <%= f.label :birth_date, "生年月日" %><br />
    <%= f.date_field :birth_date, required: true %>
  </div>

  <div class="field">
    <%= f.label :role, "ユーザーの役割" %><br />
    <%= f.radio_button :role, "施工管理者" %> 施工管理者
    <%= f.radio_button :role, "作業員" %> 作業員
  </div>

  <div class="field">
    <%= f.label :experience, "経験・スキル" %><br />
    <%= f.text_area :experience, placeholder: "経験やスキルを記入してください" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<!-- トップページに戻るボタン -->
<div class="text-center mt-4">
  <%= link_to "トップページに戻る", root_path, class: "btn btn-secondary" %>
</div>