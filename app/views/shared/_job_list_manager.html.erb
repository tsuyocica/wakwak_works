<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>作業場所</th>
        <th>作業内容</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>報酬</th>
        <th>募集状況</th>
        <th>応募の有無</th>
        <th>チャット一覧</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% job_lists.each do |job| %>
        <tr>
          <td><%= job.work_location %></td>
          <td><%= job.work_description %></td>
          <td><%= job.work_start_date %></td>
          <td><%= job.work_end_date %></td>
          <td><%= number_to_currency(job.work_payment, unit: "¥", precision: 0) %></td>
          <td>
            <% if job.work_status == "recruiting" %>
              <span class="badge bg-success">募集中</span>
            <% else %>
              <span class="badge bg-secondary">受付終了</span>
            <% end %>
          </td>
          <td>
            <% if job.job_applications.any? %>
              <span class="badge bg-info"><%= job.job_applications.count %> 件の応募</span>
            <% else %>
              <span class="badge bg-secondary">応募なし</span>
            <% end %>
          </td>
          <td>
            <% if job.job_applications.any? %>
              <%= link_to "チャット一覧", chats_path(job_id: job.id), class: "btn btn-primary btn-sm" %>
            <% else %>
              <span class="text-muted">なし</span>
            <% end %>
          </td>
          <td>
            <%= link_to "詳細", job_post_path(job), class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>